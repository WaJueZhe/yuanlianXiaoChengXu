/* compontent/home/detail/detail.wxss */
/* 引入字体图标 */
@import '../../../css/icon-font/iconfont.wxss';
.detailContent {
  width: 100%;
}

/* 状态栏面板 */

.detailContent .main-top {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #dcdcdc;
  background-color: #fff;
}

.detailContent .main-top>view {
  display: flex;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #dcdcdc;
  color: #383838;
  font-size: 14px;
}

.detailContent .main-top>view:nth-child(2)>view {
  flex: 1;
  color: black;
}

.detailContent .status text {
  font-weight: bold;
  color: #f68622;
}

.main-top .roadLess {
  position: relative;
}

.main-top .roadLess .img {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 10%;
  height: 100%;
}
.main-top .roadLess image {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 100%;
  height: 3px;
}

.main-top .roadLess .start {
  position: absolute;
  top: 0;
  left: 0;
  width: 45%;
}

.main-top .roadLess .start .iconfont {
  font-size: 20px;
}

.main-top .roadLess .start text {
  color: #2466ff;
}
.main-top .roadLess .start .time {
  color: black;
}

.main-top .roadLess .end {
  position: absolute;
  top: 0;
  right: 0;
  width: 45%;
  text-align: right;
}
.main-top .roadLess .end {
  color: black;
}

.main-top .roadLess .end .iconfont {
  font-size: 20px;
}

.detailContent .main-top .remark {
  color: #939393;
  border: none;
}
