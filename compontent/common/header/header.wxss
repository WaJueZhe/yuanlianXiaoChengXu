.content-header {
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #101a30;
  color: #fff;
}

  .content-header view {
  position: relative;
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 16px;
} 

.content-header .active::before {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  border-bottom: 10rpx solid #fff;
  width: 80%;
  font-size: 15px;
} 

