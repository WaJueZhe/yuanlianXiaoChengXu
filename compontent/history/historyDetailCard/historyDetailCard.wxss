/* compontent/history/historyDetailCard/historyDetailCard.wxss */
/* 引入字体图标 */
@import '../../../css/icon-font/iconfont.wxss';
.cardContent {
  width: 100%;
  overflow: hidden;
}

.card {
  float: right;
  margin-right: 20rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
  width: 88%;
  border: 1px solid #ccc;
  box-shadow: 0 8rpx 8rpx #ccc;
}

.card:last-child {
   margin-bottom: 20rpx;
}

/* 卡片视图标题栏 */

.card .title {
  position: relative;
  height: 70rpx;
  line-height: 70rpx;
  width: 100%;
  color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  font-size: 20px;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.card .title>text:nth-child(2) {
  font-size: 14px;
  float: right;
}

.card .title view {
  position: absolute;
  top: 50%;
  left: -60rpx;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 12px;
}

.card .title view::before {
  content: '';
  position: absolute;
  bottom: -350rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 2rpx;
  background: linear-gradient(#2166ff, #21cdff);
  height: 350rpx;
}

.card .title .numberline::before {
  display: none;
}

/* 提货标题栏 */

.card .pick {
  background-color: #2166ff;
}

.card .pick view {
  border: 4rpx solid #2166ff;
  color: #2166ff;
}

/* 卸货标题栏 */

.card .cargo {
  background-color: #f68622;
}

.card .cargo view {
  border: 4rpx solid #f68622;
  color: #f68622;
}

.card .main {
  position: relative;
  width: 100%;
  height: 220rpx;
}

.card .main>view:first-child {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 20rpx;
  width: 140rpx;
  height: 140rpx;
  text-align: center;
  line-height: 140rpx;
  background-color: #374053;
  color: #fff;
  font-size: 20px;
  border-radius: 50%;
}

.card .main>view:last-child {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 200rpx;
  font-size: 15px;
}

.card .main .detail {
  margin-top: 20rpx;
}

.main .detail>text {
  padding: 2rpx 6rpx;
  border: 1px solid #dcdcdc;
  margin-right: 10rpx;
  font-size: 15px;
  border-radius: 10rpx;
}

.card .main-bottom {
  font-size: 15px;
  padding:0 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1px solid #ececec;
  color: #383838;
}
