page {
  background-color: #fff;
}

.login-content {
  position: relative;
  width: 100%;
}

.ipt{
  margin-left: 10rpx;
  /* font-weight: bold; */
   color: #4F4F4F; 
}

.codebtn{
  background-color: #2166ff;
  color: white;
}

.login-content>image {
  position: absolute;
  top: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 180rpx;
  height: 180rpx;
}

.login-content .entry {
  position: absolute;
  top: 360rpx;
  left: 0;
  width: 100%;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.login-content .phone {
  width: 100%;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
}

.login-content .phone text {
  position: absolute;
  top: 50%;
  left: 0;
  font-size: 18px;
  font-weight: 500;
  transform: translateY(-60%);
}

.login-content .phone input {
  width: 100%;
  border-bottom: 1px solid #d9d9d9;
  font-size: 18px;
  line-height: 80rpx;
  height: 80rpx;
  padding-left: 110rpx;
}

.login-content .code {
  position: relative;
  width: 100%;
  margin-top: 50rpx;
  overflow: hidden;
}

.login-content .code text {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-60%);
  font-size: 18px;
  font-weight: 500;
}

.login-content .code input {
  width: 100%;
  border-bottom: 1px solid #d9d9d9;
  font-size: 18px;
  line-height: 80rpx;
  height: 80rpx;
  padding-left: 110rpx;
}

.login-content .code button {
  position: absolute;
  right: 0;
  top: 50%;
  z-index: 22;
  transform: translateY(-50%);
  width: 200rpx;
  height: 60rpx;
  font-size: 12px;
}

.login-content .cut {
  width: 100%;
  margin-top: 30rpx;
  font-size: 14px;
  text-align: center;
  color: #383838;
}

.login-content .cut text {
  color: #3070ff;
}

.login-content .entry>button {
  margin-top: 40rpx;
  background-color: #2166ff;
  color: #fff;
}

.login-content .register {
  margin-top: 40rpx;
  font-size: 12px;
  color: #999;
  text-align: center;
}

/* model显示框 */

.modelList {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.modelList .zezhao {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}

.modelList .user {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  color: #383838;
  font-size: 15px;
  border-top: 1px solid #ccc;
  z-index: 2;
}

.modelList .user view {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}
