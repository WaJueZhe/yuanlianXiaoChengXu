/* pages/home/taskDetail/taskDetail.wxss */

.detailContent {
  width: 100%;
  padding-bottom: 140rpx;
}

/* 底部 */
.detailContent .content-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  z-index: 222;
  box-sizing: border-box;
  padding: 20rpx;
  box-shadow: 1px -1px 1px #ccc;
  overflow: hidden;
}

.detailContent .content-bottom button {
  border-radius: 10rpx;
  display: inline-block;
  font-size: 15px;
  color: #383838;
}

.detailContent .content-bottom button:first-child {
  float: left;
  background-color: #fff;
  border: 1px solid #ccc;
  width: 38%;
}

.detailContent .content-bottom button:last-child {
  float: right;
  background-color: #2166ff;
  width: 55%;
  color: #fff;
}
