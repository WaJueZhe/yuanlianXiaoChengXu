/* pages/home/checkDetail/checkDetail.wxss */

.big {
  /* position:fixed; */
  width: 100%;
  height: 100%;
}

.qrodeContent {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 999;
}

.qrodeContent .box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 99999;
  width: 440rpx;
  height: 550rpx;
  border-radius: 30rpx;
  background-color: #fff;
  overflow: hidden;
}

.qrodeContent .box .title {
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #fff;
  font-size: 18px;
  background-color: #061128;
}

.qrodeContent .box .main {
  width: 100%;
  height: 450rpx;
  /* height: 100%; */
  background-color: #fff;
  /* padding: 20rpx; *//* box-sizing: border-box; */
  position: absolute;
  text-align: center;
}

.qrodeContent .box canvas {
  width: 200px;
  height: 100%;
  background-color: #f1f1f1;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
}

.qrodeContent .zezhao {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}
