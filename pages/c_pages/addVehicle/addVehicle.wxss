/* pages/c_pages/addVehicle/addVehicle.wxss */
page {
  background-color: #fff;
}

.form {
  padding:20rpx;
  width:100%;
  box-sizing:border-box;
}

.form .group-item {
  width:100%;
  border-bottom:1px solid #ccc;
  overflow: hidden;
}

.form .group-item::after {
  display:block;
  clear: both;
  content:' ';
}

.form .group-item .type {
  float: left;
  width:25%;
  height:110rpx;
  line-height:110rpx;
  font-size: 15px;
}

.form .group-item .type > text {
  color: red;
}

.form .group-item .select {
  float: right;
  width:70%;
  height:110rpx;
  line-height:110rpx;
  font-size: 15px;
  text-align:right;
}

.form .group-item .select .deliver {
  margin-right:20rpx;
  color:#999;
}

.form .group-item .select > input {
  padding-right:20rpx;
  width:100%;
  height:104rpx;
  text-align:right;
  font-size:15px;
}

.from-btn {
  margin:auto;
  margin-top:120rpx;
  width:95%;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size:16px;
  background-color:#2166ff;
  color:#fff;
  border-radius:10rpx;
}

.modal-box {
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background-color:rgba(0,0,0,.3);
  z-index:999;
}

.modal-box .modal-list {
  position: absolute;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  width:80%;
  max-height:600rpx;
  overflow-y:auto;
  background-color: #fff;
  border-radius: 10rpx;
}

.modal-box .modal-list .modal-item {
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size: 14px;
  border-bottom:1px solid #ccc;
  z-index:9999
}

.hide {
  display: none;
}

.show {
  display: block;
}