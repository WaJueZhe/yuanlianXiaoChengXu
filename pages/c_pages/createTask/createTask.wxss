/* pages/c_pages/createTask/createTask.wxss */
@import "../../../css/icon-font/iconfont.wxss";
@import "../../../css/icon2/iconfont.wxss";

.CreateTask {
  padding-bottom: 120rpx;
}
.group {
  width:100%;
}

.group .group-item {
  margin-top:20rpx;
  padding:0 40rpx;
  width:100%;
  height:80rpx;
  line-height:80rpx;
  font-size:15px;
  background-color: #fff;
  box-sizing:border-box;
}

.group .group-item::after {
  display:block;
  clear: both;
  content:' ';
}

.group .group-item:first-child .original {
  float: left;
  width:23%;
  height:80rpx;
}

.group .group-item .original {
  float: left;
  width:16%;
  height:80rpx;
}

.group .group-item .input {
  float: left;
  width:67%;
  height:80rpx;
  font-size:15px;
}

.group .group-item .input > input {
  width:100%;
  height:100%;
  font-size:15px;
}

.group .group-item .inputBox {
  float: left;
  width:74%;
  height:80rpx;
  font-size:15px;
}


.group .group-item .inputBox > view {
  width:100%;
  height:100%;
  font-size:15px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.group .group-item .inputBox .choose {
  color: #999;
}

.group .group-item .right {
  float:right;
  width:10%;
  height:80rpx;
  text-align:center;
}

.group .group-item .right .image {
  position: relative;
  width:100%;
  height:100%;
}

.group .group-item .right > .iconfont {
  font-size:23px;
  font-weight:600;
}

.group .group-item .right .image > image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width:46rpx;
  height: 46rpx;
}

.newAdd {
  margin-top:20rpx;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  font-size:16px;
  background-color: #fff;
}

.newAdd navigator > text {
  color: #2166ff;
}

.from-btn {
  position: fixed;
  bottom:10rpx;
  left:50%;
  transform:translateX(-50%);
  width:90%;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size: 15px;
  background-color:#2166ff;
  border-radius:10rpx;
  color: #fff;
}

.from-group {
  margin-top:20rpx;
  width:100%;
}

.from-group .item-title {
  margin-bottom:20rpx;
  padding:0 40rpx;
  width:100%;
  height:80rpx;
  line-height:80rpx;
  font-size: 15px;
  background-color:#ccc;
}

.from-group .item-title::after {
  display:block;
  clear: both;
  content:' ';
}

.from-group .item-title .title-left {
  float: left;
  width:80%;
  height:100%;
  color:#333;
}

.from-group .item-title .title-right {
  float:right;
  width:20%;
  height:100%;
}

.from-group .item-title .title-right > text {
  font-size: 22px;
  color:#777;
}

.from-group .item-title .title-right > i {
  margin-left: 10rpx;
  font-size: 22px;
  color:#777;
}

.from-group .item-title .title-right > text:last-child {
  float:right;
}

.from-group .from-item {
  padding: 10rpx;
  width:100%;
  font-size: 24px;
  background-color: #fff;
  border-bottom:1px solid #eee;
  box-sizing: border-box;
}

.from-group .from-item::after {
  display:block;
  clear: both;
  content:' ';
}

.from-group .from-item .item-left {
  float: left;
  width:30%;
  font-size: 14px;
}

.from-group .from-item .item-left > text:first-child {
  font-size: 22px;
  vertical-align: middle;
}

.from-group .from-item .item-left .deliver-place {
  vertical-align: middle;
}

.from-group .from-item .item-left .finish-time {
  margin-left:43rpx;
}

.from-group .from-item .item-left .finish-time > text {
  margin-right:4rpx;
  font-size: 23px;
  vertical-align:middle;
}

.from-group .from-item .item-right {
  float:right;
  padding-top: 4rpx;
  width:70%;
  font-size: 14px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.from-group .from-item .item-msg {
  float: left;
  width:40%;
  line-height: 48rpx;
  font-size: 14px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.from-group .from-item .number {
  float: right;
  margin-top: 5rpx;
  width:25%;
  font-size: 14px;
  text-align:center;
  border:1px solid #ccc;
  border-radius:10rpx;
}

.modal-box {
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background-color:rgba(0,0,0,.3);
  z-index:999;
}

.modal-box .modal-list {
  position: absolute;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  width:80%;
  max-height:500rpx;
  overflow-y:auto;
  background-color: #fff;
  border-radius:10rpx;
}

.modal-box .modal-list .modal-tit {
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size: 16px;
  font-weight:bold;
  border-bottom:1px solid #ccc;
}

.modal-box .modal-list .modal-item {
  padding: 10rpx;
  padding-left:20rpx;
  font-size: 14px;
  border-bottom:1px solid #ccc;
  z-index:9999;
  vertical-align:middle;
}

.show {
  display: block !important;
}

.hide {
  display: none !important;
}