/* pages/c_pages/compileAddress/compileAddress.wxss */
@import "../../../css/icon-font/iconfont.wxss";

page {
  background-color: #fff;
}

.form {
  padding:20rpx;
  width:100%;
  box-sizing:border-box;
}

.form .group-item {
  width:100%;
  border-bottom:1px solid #ccc;
}

.form .group-item::after {
  display:block;
  clear: both;
  content:' ';
}

.form .group-item .type {
  float: left;
  width:25%;
  height:110rpx;
  line-height:110rpx;
  font-size: 15px;
}

.form .group-item .type > text {
  color:red;
}

.form .group-item .select {
  float: right;
  width:75%;
  height:110rpx;
  line-height:110rpx;
  font-size: 15px;
  text-align:right;
}

.form .group-item .select .deliver {
  margin-right:20rpx;
  color:#999;
}

.form .group-item .select > input {
  padding-right:20rpx;
  width:100%;
  height:104rpx;
  text-align:right;
  font-size: 15px;
}

.from-btn {
  margin:auto;
  margin-top:120rpx;
  width:95%;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size: 16px;
  background-color:#2166ff;
  color:#fff;
  border-radius:10rpx;
}

.modal-box {
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background-color:rgba(0,0,0,.3);
  z-index:999;
}

.modal-box .modal-list {
  position: absolute;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  width:80%;
  background-color: #fff;
  border-radius: 10rpx;
}

.modal-box .modal-list .modal-item {
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size: 14px;
  border-bottom:2rpx solid #ccc;
  z-index:9999
}

.show {
  display: block !important;
}

.hide {
  display: none !important;
}


/* 选择地区 */
.citypicker {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100%;  
  width: 100%;
  background-color: rgba(0,0,0,.3);
  z-index: 22222;
}
  
.citybody {
  position: fixed;  
  bottom: 0px;
  width: 100%;
  height: 300px;
  background-color: #fff;
  z-index: 33333;
}  
  
.cityheader {  
  position: absolute;  
  top:0px;  
  width: 100%;  
  z-index:44444;
  border-bottom: 1px solid #ccc;
  background-color: #eee;
}  
  
.city-cancel {  
  float: left;  
  margin: 20rpx;  
  color: #828282;  
}  
  
.city-true {  
  float: right;  
  margin: 20rpx;  
  color: #2166ff;  
}  
  
.section .picker {  
  background-color: #fff;  
  border-bottom: 2px #cccccc solid;  
  border-top: 2px #d9d9d9 solid;  
  padding: 20rpx;  
}  