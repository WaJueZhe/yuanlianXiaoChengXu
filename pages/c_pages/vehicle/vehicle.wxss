/* pages/c_pages/vehicle/vehicle.wxss */
@import "../../../css/icon-font/iconfont.wxss";

.serch {
  position: relative;
  padding: 20rpx;
  width:100%;
  height: 130rpx;
  box-sizing: border-box;
  background-color: #061128;
  z-index:2222;
}

.serch::after {
  display:block;
  clear: both;
  content:' ';
}

.serch .input {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width:85%;
  height: 90rpx;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.serch .input > text {
  position: absolute;
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
  font-size: 22px;
  vertical-align:middle;
}

.serch .input > input {
  position: absolute;
  top: 0;
  left: 70rpx;
  width: 84%;
  height: 100%;
  font-size:15px;
  border-radius: 10rpx;
}

.serch .button {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 15%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 14px;
  background-color: #2d85de;
  color: #ffffff;
  z-index: 33333;
}

.groupContent {
  margin-bottom: 130rpx;
}

.group {
  margin: 20rpx;
  border:1px solid #c7c7c7;
  border-radius:20rpx;
  box-sizing: border-box;
  font-size: 15px;
  background-color:#f5f5f5;
}

.group .groupBox .info {
  padding:0 20rpx;
  margin-top:20rpx;
  margin-bottom:20rpx;
  width:100%;
  display:flex;
  justify-content:space-between;
  box-sizing:border-box;
}

.group .groupBox .info::after {
  display:block;
  clear: both;
  content:' ';
}

.group .groupBox .info .name {
  flex:1;
}

.group .groupBox .info .phone {
  flex:1;
}

.group .groupBox .company-name {
  padding:0 20rpx;
  margin-top:20rpx;
  width:100%;
  box-sizing: border-box;
}

.group .groupBox .company-name::after {
  display:block;
  clear: both;
  content:' ';
}

.group .groupBox .company-name .left {
  float: left;
  width:23%;
}

.group .groupBox .company-name .right {
  float:left;
  width:77%;
}

.group .group-btn {
  padding:0 20rpx;
  margin-top:14rpx;
  width:100%;
  text-align:right;
  color:#777;
  z-index:9999;
  box-sizing: border-box;
}

.group .group-btn .btn-left {
  display:inline-block;
  width:120rpx;
  height:70rpx;
  line-height:70rpx;
  text-align:center;
}

.nomore {
  margin-top: 20rpx;
  text-align: center;
  font-size: 14px;
  color: #999;
}

.add-btn {
  position: fixed;
  bottom:10rpx;
  left:50%;
  transform:translateX(-50%);
  width:90%;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size: 15px;
  background-color:#2166ff;
  border-radius:10rpx;
  color: #fff;
}