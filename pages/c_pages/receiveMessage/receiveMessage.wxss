/* pages/c_pages/receiveMessage/receiveMessage.wxss */
.receiveMessage {
  width:100%;
  height:100%;
  box-sizing: border-box;
}

.receiveMessage .message {
  margin-top:20rpx;
  padding: 0 40rpx;
  width:100%;
  height:80rpx;
  line-height:80rpx;
  background-color: #fff;
  box-sizing:border-box;
}

.receiveMessage .message::after {
  display:block;
  clear: both;
  content:' ';
}

.receiveMessage .message .name {
  float: left;
  width:20%;
  font-size: 15px;
}

.receiveMessage .message .name > text {
  color: red;
}

.receiveMessage .message .input {
  float:right;
  width:80%;
  height:80rpx;
  line-height:80rpx;
}

.receiveMessage .message .input > input {
  padding-left:5rpx;
  width:100%;
  height:100%;
  font-size: 15px;
}

.receiveMessage .msg-btn {
  position: fixed;
  bottom:20rpx;
  left:0;
  padding: 0 40rpx;
  width:100%;
  height:80rpx;
  line-height:80rpx;
  box-sizing: border-box;
  display:flex;
  justify-content:space-between;
}

.receiveMessage .msg-btn .btn {
  flex:1;
  text-align:center;
  background-color:#ccc;
  color:#fff;
  font-size: 16px;
  border-radius:10rpx;
}

.receiveMessage .msg-btn .btn:first-child {
  margin-right:40rpx;
  background-color:#2166ff;
}

.active {
  background-color:#2166ff !important;
}