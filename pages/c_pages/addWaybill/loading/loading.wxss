/* pages/c_pages/addWaybill/loading /loading .wxss */
@import "../../../../css/icon-font/iconfont.wxss";

page {
  padding-bottom: 80rpx;
}

.shipment {
  width:100%;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size:18px;
  font-weight: bold;
  z-index:9999;
  background-color:#ccc;
}
.serch {
  position: relative;
  width:100%;
  height: 130rpx;
  padding: 20rpx;
  box-sizing: border-box;
  z-index:2222;
}

.serch .input {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding-left: 40rpx;
  width:85%;
  height: 90rpx;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.serch .input > i {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  font-size:23px;
  vertical-align:middle;
}

.serch .input > input {
  position: absolute;
  left: 90rpx;
  width: 80%;
  height: 100%;
  font-size: 15px;
  border-radius: 10rpx;
}

.serch .button {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 15%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 14px;
  background-color: #2d85de;
  color: #ffffff;
}

.group {
  margin: 20rpx;
  border:2rpx solid #c7c7c7;
  border-radius:20rpx;
  box-sizing: border-box;
  font-size:15px;
  background-color:#f5f5f5;
}

.group .code {
  padding:0 20rpx;
  width:100%;
  font-size:15px;
  height:60rpx;
  line-height:60rpx;
  box-sizing: border-box;
  background-color: #343d50;
  color:#fff;
  border-top-right-radius:20rpx;
  border-top-left-radius:20rpx;
}

.group .info {
  padding:0 20rpx;
  margin-top:20rpx;
  width:100%;
  box-sizing: border-box;
}

.group .info::after {
  display:block;
  clear: both;
  content:' ';
}

.group .info .name {
  float: left;
  margin-right:70rpx;
}

.group .info .name > text {
  padding-right:20rpx;
  font-size:20px;
}

.group .info .phone {
  float: left;
}

.group .company-name {
  padding:0 20rpx;
  margin-top:20rpx;
  width:100%;
  box-sizing: border-box;
}

.group .company-name::after {
  display:block;
  clear: both;
  content:' ';
}

.group .company-name .left {
  float: left;
  width:9%;
}

.group .company-name .left > text {
  font-size:20px;
}

.group .company-name .right {
  float:left;
  width:91%;
}

.group .group-btn {
  padding:0 20rpx;
  margin-top:14rpx;
  width:100%;
  text-align:right;
  color:#777;
  z-index:9999;
  box-sizing: border-box;
}

.group .group-btn .btn-left {
  display:inline-block;
  width:120rpx;
  height:70rpx;
  line-height:70rpx;
  text-align:center;
}

.add-address {
  position: fixed;
  bottom:10rpx;
  left:50%;
  transform:translateX(-50%);
  width:90%;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size:15px;
  background-color:#2166ff;
  border-radius:10rpx;
  color: #fff;
}