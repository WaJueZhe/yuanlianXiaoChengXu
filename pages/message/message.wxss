@import "../../css/icon-font/iconfont.wxss";

.message {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
/* 普通的 */
.mes {
  position: relative;
  padding: 0 20rpx;
  height: 80rpx;
  border-bottom: 1px solid #ccc;
}

.mes text:first-child {
  position: absolute;
  top: 24rpx;
  left:20rpx;
}

.mes .title {
  position: absolute;
  top: 0;
  left: 60rpx;
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 12px;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.mes .time {
  position: absolute;
  top: 0;
  right: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 12px;
}
/* 置顶的 */
.Stick {
  position: relative;
  padding: 0 20rpx;
  height: 80rpx;
  border-bottom: 1px solid #ccc;
}

.Stick text:first-child {
  position: absolute;
  top: 24rpx;
  left:20rpx;
}

.Stick-title {
  position: absolute;
  top: 0;
  left: 60rpx;
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 12px;
  color: red;
  font-weight: bold;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.Stick-time {
  position: absolute;
  top: 0;
  right: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 12px;
}

.nomore {
  margin-top:20rpx;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size:16px;
  color:#383838;
}