/* pages/practical/practical.wxss */

.abnormal {
  position: relative;
  height: 70rpx;
  line-height: 70rpx;
  width: 100%;
  background-color: #eee;
  font-size: 16px;
}

.abnormal .abnormal-tit {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.abnormal > text:last-child {
  position: absolute;
  right: 34rpx;
  font-size: 24px;
  color: blue;
}

.group-box {
  width: 100%;
}

.group-box .group {
  width: 100%;
  display: table;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 2rpx solid #d9d9d9;
}

.group-box .group:first-child {
  background-color: #f5f5f5;
}

.group-box .group .group-tit {
  padding: 16rpx 6rpx;
  width: 24%;
  display: table-cell;
  text-align: center;
  font-size: 14px;
  vertical-align: middle;
  border-right: 2rpx solid #dedede;
  box-sizing: border-box;
  word-break: break-all;
}

.group-box .group .group-tit:nth-child(3) {
  width: 19%;
}

.group-box .group .group-tit:nth-child(5) {
  width: 9%;
}

.character-text {
  margin-top: 60rpx;
  padding: 20rpx;
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
}

.character-text > textarea {
  padding: 20rpx;
  width: 100%;
  height: 100%;
  font-size: 14px;
  background-color: #fff;
  box-sizing: border-box;
}

.character-text .sum {
  margin-right: 6rpx;
  text-align: right;
  font-size: 14px;
}

.btn {
  padding: 40rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}

.btn .btn-confirm {
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 18px;
  background-color: blue;
  color: #fff;
  border-radius: 10rpx;
}

.btn .btn-confirm:first-child {
  margin-right: 20rpx;
}

.modal-box {
  width: 100%;
  height: 100%;
}

.modal-box .zzc {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 999;
}

.modal-box .modal-list {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  z-index: 9999;
}

.modal-box .modal-list .modal-item {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 14px;
  border-bottom: 2rpx solid #ccc;
  z-index: 9999;
}
