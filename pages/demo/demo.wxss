/* pages/demo/demo.wxss */
.canvasContent {
  position: relative;
  background-color: #fff;
  width: 100%;
  height: 300px;
}

.canvasContent canvas {
  width: 100%;
  height: 250px;
  border-top: 1px solid #ccc;
  box-sizing: border-box;
}

.canvasContent>button{
  position: absolute;
  bottom: 40rpx;
  width: 45%;
  height: 80rpx;
  padding: 0;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 15px;
}

.canvasContent button:nth-child(2){
  background-color: #2166ff;
  left: 20rpx;
}

.canvasContent button:last-child{
  background-color: #383838;
  right: 20rpx;
}