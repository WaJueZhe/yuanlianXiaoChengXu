/* pages/check/check.wxss */
page{
  background-color: #fff;
}

.querycontent {
  width: 100%;
}

.querycontent .int {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.querycontent .int view {
  margin-top: 100rpx;
  text-align: center;
  width: 100%;
  height: 100rpx;
}

.querycontent .int view image {
  width: 360rpx;
  height: 100%;
}

.querycontent .int input {
  width: 100%;
  height: 90rpx;
  border-radius: 10rpx;
  font-size: 15px;
  padding-left: 40rpx;
  border: 1px solid #ececec;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.querycontent .int button {
  width: 100%;
  height: 90rpx;
  background-color: #2d85de;
  margin-top: 20rpx;
  color: #fff;
}
