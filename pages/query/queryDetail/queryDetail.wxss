/* pages/query/queryDetail/queryDetail.wxss */

.queryCode {
  width: 100%;
}

.serchContent {
  position: relative;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.serchContent input {
  width: 100%;
  height: 90rpx;
  border-radius: 10rpx;
  font-size: 15px;
  padding-left: 40rpx;
  border: 1px solid #ececec;
  box-sizing: border-box;
  background-color: #fff;
}

.serchContent button{
  position: absolute;
  top: 50%;
  right: 20rpx;
  transform: translateY(-50%);
  font-size: 15px;
  width: 130rpx;
  padding: 0;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  background-color: #2d85de;
  color: #fff;
  z-index: 2;
}

/* compontent/query/serchCard/serchCard.wxss */

@import "../../../css/icon-font/iconfont.wxss";

.checkContent {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.checkContent .card {
  margin-bottom: 20rpx;
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  border: 1px solid #999ea7;
}

/* 卡片视图标题栏 */

.checkContent .title {
  width: 100%;
  background-color: #343d50;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  font-size: 18px;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.checkContent .title text:last-child{
  float: right;
}

/* 卡片视图主题内容 */

/* 卡片视图顶部面板 */

.checkContent .card-main {
  width: 100%;
}

.checkContent .card-main .main-top {
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.card-main .main-top view {
  margin-top: 20rpx;
  font-size: 15px;
}

.card-main .main-top view text:first-child {
  margin-right: 20rpx;
}

.card-main .main-top view text:last-child text {
  font-weight: bold;
}



/* 卡片视图中间面板 */

.checkContent .card-main .main-middle {
  position: relative;
  margin-top: 20rpx;
  padding-left: 50rpx;
  font-size: 15px;
  height: 70rpx;
}

.checkContent .nomore{
  margin-top:20rpx;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size:16px;
  color:#383838;
}

.checkContent .card-main .main-middle text {
  display: inline-block;
  border: 1px solid #999ea7;
  padding: 4rpx 6rpx;
  border-radius: 10rpx;
  margin-left: 10rpx;
}

.checkContent .card-main .main-middle view {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 96%;
  height: 1px;
  border-top: 1px solid #999ea7;
}

/* 卡片视图底部面板 */

.checkContent .card-main .main-bottom {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  font-size: 15px;
  box-sizing: border-box;
}

.checkContent .card-main .main-bottom text {
  float: right;
}
