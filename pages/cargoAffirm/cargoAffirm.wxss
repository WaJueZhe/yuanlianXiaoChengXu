/* pages/cargoAffirm/cargoAffirm.wxss */
@import '../../css/icon2/iconfont.wxss';
.cargoAffirm {
  width: 100%;
  height: 100vh;
  background-color: #fff;
}

.title {
  width: 100%;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size:16px;
  background-color: #ccc;
}

.group-box .group {
  width: 100%;
  display: table;
  border-bottom: 1px solid #d9d9d9;
}

.group-box .group .group-tit {
  display: table-cell;
  width: 25%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 14px;
  vertical-align: middle;
  border-right: 1px solid #dedede;
  box-sizing: border-box;
  word-break: break-all;
}

.info-text {
  margin-top:100rpx;
  margin-bottom :28rpx;
  text-align:center;
  font-size:14px;
  color:#666;
}

.info-text > text {
  color: blue;
}

.btn {
  position: fixed;
  bottom:10rpx;
  padding:0 30rpx;
  width:100%;
  display:flex;
  justify-content:space-between;
  box-sizing:border-box;
}

.btn .confirm {
  flex:1;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size:18px;
  color:#fff;
  background-color:blue;
  box-sizing:border-box;
  border-radius:10rpx;
}

.btn .confirm:last-child {
  margin-left:30rpx;
  background-color:red;
}

.show {
  display: block;
}

.hide {
  display: none;
}